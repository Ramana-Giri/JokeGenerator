<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="main.css">
    <title>Joke Generator</title>
</head>
<body class="category-<%= data.category.toLowerCase() %>">
  <div class="emoji-pattern"></div>
  <div class="container vh-100"  >
      <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-6 text-center custom-shadow custom-round" id="white-box">
          <h1 class="text-black my-4">Joke Generator</h1>
          <div class=" py-3 my-3 bg-black text-white custom-round shadow-sm">
              <h2 class="fw-bold"><%= data.setup %><%= locals.data.joke %></h2>
              <h3><%= locals.data.delivery %></h3>
              <p>Category: <%= data.category %> Type: <%= data.type %></p>
          </div>

      <!-- Form options -->
      <form action="/get-joke" method="post">

          <!-- Category Section (Multi-select with Checkboxes) -->
          <div>
            <h4>Select Category</h4>
            <input type="radio" name="category" value="Any" id="any">
            <label for="any">Any</label>
            <input type="radio" name="category" value="Programming" id="programming">
            <label for="programming">Programming</label>
            <input type="radio" name="category" value="Dark" id="dark">
            <label for="dark">Dark</label>
            <input type="radio" name="category" value="Misc" id="misc">
            <label for="misc">Misc</label>
            <input type="radio" name="category" value="Pun" id="pun">
            <label for="pun">Pun</label>
            <input type="radio" name="category" value="Spooky" id="spooky">
            <label for="spooky">Spooky</label>
            <input type="radio" name="category" value="Christmas" id="christmas">
            <label for="christmas">Christmas</label>
          </div>

          <!-- Blacklist Section (Multi-select with Checkboxes) -->
          <div>
            <h4>Select Blacklist</h4>
            <input type="checkbox" name="blacklist[]" value="nsfw" id="nsfw">
            <label for="nsfw">NSFW</label>
            <input type="checkbox" name="blacklist[]" value="religious" id="religious">
            <label for="religious">Religious</label>
            <input type="checkbox" name="blacklist[]" value="political" id="political">
            <label for="political">Political</label>
            <input type="checkbox" name="blacklist[]" value="racist" id="racist">
            <label for="racist">Racist</label>
            <input type="checkbox" name="blacklist[]" value="sexist" id="sexist">
            <label for="sexist">Sexist</label>
            <input type="checkbox" name="blacklist[]" value="explicit" id="explicit">
            <label for="explicit">Explicit</label>
          </div>

          <!-- Type Section (Multi-select with Checkboxes) -->
          <div>
            <h4>Select Type</h4>
            <input type="radio" name="type[]" value="single" id="single">
            <label for="single">Single</label>
            <input type="radio" name="type[]" value="twopart" id="two-part">
            <label for="two-part">Two part</label>
            <input type="radio" name="type[]" value="Both" id="both">
            <label for="both">Both</label>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn custom-round w-100 btn-primary my-3 fs-4">Generate joke</button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

